<section class="bg-[#A5A3BF] flex flex-wrap border-b-2 border-solid border-white p-4 md:p-8">
    <h2 class="font-bold mx-auto mt-4 text-2xl">Formation en partenariat</h2>
    <div class="flex flex-col md:flex-row">
        {% for formation in partnershipFormation %}
            <article class="bg-[#D7C8C8] rounded-lg p-4 my-8 md:mx-6 shadow-lg hover:shadow-xl transform transition-transform hover:scale-105">
                <h3 class="font-bold">{{ formation.title }}</h3>
                <p class="m-4 text-justify">{{ formation.content | raw }}</p>
            </article>
        {% endfor %}
    </div>
</section>